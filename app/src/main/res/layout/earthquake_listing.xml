<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/eq_mag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_layout_margins"
        android:paddingStart="@dimen/default_layout_margins"
        android:textSize="18sp"
        android:layout_weight="1"
        tools:text="5.0"
        tools:textSize="18sp"/>

    <TextView
        android:id="@+id/eq_location"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_weight="1"
        tools:text="Los Angeles"
        tools:textSize="18sp"/>

    <TextView
        android:id="@+id/eq_datetime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/default_layout_margins"
        android:paddingRight="@dimen/default_layout_margins"
        android:textSize="18sp"
        tools:text="Jan 1, 2018"
        tools:textSize="18sp"/>

</LinearLayout>
